# https://github.com/robbyrussell/oh-my-zsh

init_env_zsh() {
  DISABLE_UPDATE_PROMPT=true # Zsh won't ask for pulling updates.
  plugins+=(osx)
  UPDATE_ZSH_DAYS=1 # Zsh will check for updates once per day.
  ZSH="$HOME/.oh-my-zsh"
}

init_rc_zsh() {
  [[ -f "$ZSH/oh-my-zsh.sh" ]] && source "$ZSH/oh-my-zsh.sh" # Auto-update Oh My Zsh.
}
